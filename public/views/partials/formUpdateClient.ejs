<div class="form-group col-10 mx-auto my-5 w-75 border p-3 bg-dark bg-gradient text-white bg-opacity-75 shadow-lg">
    <form id="formUpdateClient" action="/api/clientes/update/<%=cliente._id%>" method="post">
        <fieldset>
            <div class="row my-3 mx-auto">
                <div class="col-3 mx-auto my-2">
                    <label for="idDisable">Id#</label>
                    <input type="text" name="idDisable" id="idDisable" class="form-control-plaintext text-white" value="<%=cliente._id%>"
                        disabled="true">
                </div>
                <input type="text" name="id" id="id" class="form-control" value="<%=cliente._id%>" hidden="true">
                <br>
                <div class="col-2 mx-auto my-2">
                    <label for="idCreator">Creado por</label>
                    <input type="text" name="idCreator" id="idCreator" class="form-control-plaintext text-white small" value="<%=cliente.creator[0]%> <%=cliente.creator[1]%>"
                        disabled="true">
                </div>
                <br>
                <div class="col-2 mx-auto my-2">
                    <label for="timestampDisable">Fecha creación</label>
                    <input type="text" name="timestampDisable" id="timestampDisable" class="form-control-plaintext text-white small" value="<%=cliente.timestamp%>"
                        disabled="true">
                </div>
                <br>
                <div class="col-2 mx-auto my-2">
                    <label for="modificatorDisable">Modificado por</label>
                    <input type="text" name="modificatorDisable" id="modificatorDisable" class="form-control-plaintext text-white small" value="<%=cliente.modificator[0]%> <%=cliente.modificator[1]%>"
                        disabled="true">
                </div>
                <br>
                <div class="col-auto mx-auto my-2">
                    <label for="modifiedOnDisable">Fecha modificación</label>
                    <input type="text" name="modifiedOnDisable" id="modifiedOnDisable" class="form-control-plaintext text-white small" value="<%=cliente.modifiedOn%>"
                        disabled="true">
                </div>
                <br>
                <hr>
                <br>
                    <div class="col-3 my-2">
                        <label for="name">Nombre Cliente</label>
                        <input type="text" name="name" id="name" class="form-control" value="<%=cliente.name %>"
                            placeholder="Nombre Cliente" required>
                    </div>
                    <br>
                    <div class="col-3 my-2">
                        <label for="code">Codigo</label>
                        <input type="text" name="code" id="code" class="form-control" value="<%=cliente.code%>"
                            placeholder="Codigo" required>
                    </div>
                    <br>
                    <div class="col-3 my-2">
                        <label for="project">Proyectos</label>
                        <input type="number" name="project" id="project" class="form-control"
                            value="<%=cliente.project %>" placeholder="Numero de proyectos" disabled="true">
                    </div>
                    <br>
                    <div class="col-3 my-2">
                        <label for="status">Status</label>
                        <select id="status" name="status" class="form-select">
                            <% if(cliente.status===true) { %>
                                <option selected disabled value="true">Activo</option>
                                <option value="false">Inactivo</option>
                                <% } else { %>
                                    <option selected disabled value="false">Inactivo</option>
                                    <option value="true">Activo</option>
                                    <% } %>
                        </select>
                    </div>
                    <input type="text" name="statusHidden" id="statusHidden" class="form-control"
                        value="<%=cliente.status%>" hidden="true">
               
                <br>
                
                    <div class="col-10 my-3">
                        <label for="logo">Logo URL</label>
                        <input type="text" name="logo" id="logo" class="form-control" value="<%=cliente.logo%>"
                            placeholder="Logo URL" required>
                    </div>
                
                <br>
                <div class="container-fluid my-1 p-1 text-center">
                    <img src="<%=cliente.logo%>" class="img-thumbnail rounded mx-auto" alt="Logo Cliente" width="200px"
                        height="200px">
                </div>
                <br>
                <input type="text" name="idHidden" id="idHidden" class="form-control" value="<%= userInfo.id %>"
                    hidden="true">
                <input type="text" name="usernameHidden" id="usernameHidden" class="form-control"
                    value="<%= userInfo.username %>" hidden="true">
                <input type="text" name="unameHidden" id="unameHidden" class="form-control" value="<%= userInfo.name %>"
                    hidden="true">
                <input type="text" name="lastNameHidden" id="lastNameHidden" class="form-control"
                    value="<%= userInfo.lastName %>" hidden="true">

                <div class="d-flex justify-content-center my-2">
                    <button id="btnUpdate" class="btn btn-success mx-auto my-2">Update Cliente <i
                            class="fa fa-save"></i></button>
                    <a class="btn btn-primary my-2" href="/api/clientes"> Volver <i class="fa fa-arrow-left"></i></a>
                    <a class="btn btn-danger mx-auto my-2" href="/api/clientes/delete/<%=cliente._id%>">Eliminar <i
                            class="fa fa-trash"></i></a>
                </div>
        </fieldset>
    </form>
</div>