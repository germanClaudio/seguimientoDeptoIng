<div class="form-group col-4 mx-auto my-2 w-25 border p-3 bg-light .bg-light.bg-gradient text-dark bg-opacity-75 rounded-3 shadow-lg">
    <form action="login" method="post"> 
        <fieldset>
            <div class="d-flex justify-content-center mx-auto">
                <img src='../../../src/images/Logo_Prodismo.png' width="150" height="150" class="p-2 my-1 mx-auto">
            </div>
            <label for="username">Usuario</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Nombre de Usuario" required>
            <br>
            <label for="thumbnail">Password</label>
            <div class="input-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                <button class="btn btn-dark text-light" type="button" id="show-password-btn"><i class="fa fa-eye" aria-hidden="true"></i></button>
            </div>
            <br>
            <div class="form-check mt-1 mb-2">
                <input class="form-check-input" type="checkbox" name="sessionStarted" value="checked" id="sessionStarted">
                <label class="form-check-label" for="sessionStarted">
                    Mantener sessión activa
                </label>
            </div>
            <div class="my-3 text-end">
                <a href="#" class="link small">¿Olvidaste tu contraseña?</a>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mx-auto">Login <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                <button type="reset" class="btn btn-danger mx-auto">Reset <i class="fa fa-refresh" aria-hidden="true"></i></button>
            </div>
        </fieldset>
    </form>
</div>