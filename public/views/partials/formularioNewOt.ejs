<div class="card mx-auto" style="width: 95vw;">
    <div class="card card-body d-flex justify-content-center">
        <div class="form-group col-12 mx-auto my-2 w-100 border px-5 py-1 bg-dark bg-gradient text-white bg-opacity-75">
            <form id="formNewOt" action="/api/proyectos/oci" method="post">
                <fieldset>
                    <h5 class="d-block mx-auto my-2 text-center">Agregar Nueva OT a OCI / Proyecto: <%= proyecto[0].project[0].projectName %></h5>
                    <div class="row my-3">
                        <div class="col-12">
                            <% let j=0
                            if (proyecto.length > 0) { 
                    
                                 for ( let m = 0;  proyecto.length > m; m++) { 
                                     if (proyecto[m].project[j].oci.length > 1) { 
                                         for ( let k = 0; proyecto[m].project[j].oci.length > k; k++) { %>
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label" for="ociNumber<%= proyecto[m].project[j].oci[k].ociNumber %>">OCI # <%= proyecto[m].project[j].oci[k].ociNumber %></label>
                                                <input class="form-check-input" type="radio" name="ociNumber" id="ociNumber<%= proyecto[m].project[j].oci[k].ociNumber %>" value="<%= proyecto[m].project[j].oci[k].ociNumber %>">
                                            </div>
                                        <% } 
                                     } else { %>
                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label" for="ociNumber<%= proyecto[j].project[j].oci[0].ociNumber %>">OCI # <%= proyecto[m].project[j].oci[0].ociNumber %></label>
                                            <input class="form-check-input" type="radio" name="ociNumber" id="ociNumber<%= proyecto[m].project[j].oci[0].ociNumber %>" value="<%= proyecto[m].project[j].oci[0].ociNumber %>" checked>
                                        </div>       
                                    <% } 
                                 }     
                            } else { %>
                                <span class="badge rounded-pill bg-danger text-white"> No hay datos cargados </span>
                            <% } %>    
                        </div>
                        
                        <br>
                    </div>

                    <hr>

                    <div class="row my-3">
                        <div class="col-11">
                            <div class="accordion" id="accordionPanelsStayOpenExample">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                        <button class="accordion-button" id="buttonOne" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOneForm" aria-expanded="false" aria-controls="panelsStayOpen-collapseOneForm">
                                            <strong>Información OT</strong>
                                        </button>
                                    </h2>
                                    <div id="panelsStayOpen-collapseOneForm" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
                                        <div class="accordion-body" id="div_body">
                                            <div class="row my-3" id="otItemRow">
                                                <div class="col-1">
                                                    <label for="otNumber" id="labelOtNumber">OT#</label>
                                                    <input type="number" name="otNumber" id="otNumber" class="form-control" min="0" max="9999"
                                                    placeholder="Número OT">
                                                </div>
                                                <div class="col-1">
                                                    <label for="opNumber" id="labelOpNumber">OP#</label>
                                                    <input type="number" name="opNumber" id="opNumber" class="form-control" min="0" max="9999"
                                                    placeholder="Número OP">
                                                </div>
                                                <div class="col-2">
                                                    <label for="otDescription" id="labelOtDescription">Descripción OP</label>
                                                    <input type="text" name="otDescription" id="otDescription" class="form-control"
                                                    placeholder="Descripcion OP">
                                                </div>
                                                <div class="col-1">
                                                    <label for="otStatus" id="labelOtStatus">Status OT</label><br>
                                                    <!-- <div class="d-inline-block me-1">Inactiva</div> -->
                                                    <div class="form-check form-switch d-inline-block">
                                                        <input class="form-check-input" type="checkbox" id="otStatus" name="otStatus" aria-checked="true" style="cursor: pointer;" checked>
                                                        <label class="form-check-label" for="otStatus">Activa</label>
                                                    </div>    
                                                </div>
                                                <div class="col-2">
                                                    <label for="internoDiseno" id="labelInternoDiseno">Diseño seguido por</label>
                                                    <input type="text" name="internoDiseno" id="internoDiseno" class="form-control"
                                                    placeholder="Diseño">    
                                                </div>
                                                <div class="col-2">
                                                    <label for="internoSimulacion" id="labelInternoSimulacion">Simulación seguida por</label>
                                                    <input type="text" name="internoSimulacion" id="internoSimulacion" class="form-control"
                                                    placeholder="Simulación">    
                                                </div>
                                                <div class="col-2">
                                                    <label for="externoDiseno" id="labelExternoDiseno">Proveedor externo</label>
                                                    <input type="text" name="externoDiseno" id="externoDiseno" class="form-control"
                                                    placeholder="Proveedor">    
                                                </div>
                                                <div class="col-1">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                                <div class="d-flex justify-content-center align-items-center">
                                    <button type="button" id="btnAddNewRow" class="btn btn-primary rounded-circle me-2 my-2"><i class="fa-solid fa-plus-circle"></i></button>
                                </div>
                        </div>
                    </div>
                            <hr>
                            id usuario: <input type="text" name="idHidden" id="idHidden" class="form-control" value="<%= userInfo.id %>" disabled>
                            id cliente: <input type="text" name="clientIdHidden" id="clientIdHidden" class="form-control" disabled
                            value="<%= proyecto[0].client[0]._id %>">
                            id OT: <input type="number" name="idOtHidden" id="idOtHidden" class="form-control"
                            value="">
                            <input type="number" name="otQuantity" id="otQuantity" class="form-control"
                            value="">
                    <br>
                    <div class="d-flex justify-content-center my-2">
                        <button id="btnNewOt" type="submit" class="btn btn-primary mx-auto w-25">Guardar <i
                                class="fa-solid fa-save"></i></button>
                        <button type="reset" class="btn btn-danger mx-auto w-25">Reset <i
                                class="fa-solid fa-rotate-left"></i></button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>