<div class="shadow-lg col-md-6 mx-auto my-1 w-50 border rounded p-3 text-white bg-opacity-75" style="background-color: #272787;">
    <form class="row align-items-center" id="searchForm" onsubmit="return searchClient(this)">
        <div class="col-md-4">
            <input class="form-control" type="text" id="query" name="query" placeholder="Buscar clientes">
        </div>

        <div class="col-md-2 ms-4">
            <select class="form-select form-select small" aria-label=".form-select" name="status" id="status" style="font-size: 13px;">
                <option selected value="todos">Todos</option>
                <option value="activos">Activos</option>
                <option value="inactivos">Inactivos</option>
            </select>
        </div>

        <div class="col-md-3 ms-4" style="font-size: 13px;">
            <div class="form-check d-flex align-items-start">
                <input class="form-check-input" type="radio" name="projects" id="allProjects"  value="all" checked>
                <label class="form-check-label ms-2 text-white" for="allProjects">Todos</label>
            </div>
            <div class="form-check d-flex align-items-start">
                <input class="form-check-input" type="radio" name="projects" id="withProjects" value="with" >
                <label class="form-check-label ms-2 text-white" for="withProjects">Con proyectos</label>
            </div>
            <div class="form-check d-flex align-items-start">
                <input class="form-check-input" type="radio" name="projects" id="withoutProjects" value="without" >
                <label class="form-check-label ms-2 text-white" for="withoutProjects">Sin proyectos</label>
            </div>
        </div>
        
        <div class="col-md">
            <button class="btn rounded-circle bg-white me-2 text-dark" title="Buscar" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
            <button class="btn rounded-circle bg-white ms-2 text-dark" title="Eliminar filtros" type="reset">
                <i class="fa-solid fa-trash"></i>
            </button>
        </div>
    </form>
</div>